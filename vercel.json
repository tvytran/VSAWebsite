{
  "version": 2,
  "builds": [
    { 
      "src": "backend/server.js", 
      "use": "@vercel/node"
    },
    { 
      "src": "vsa-frontend/package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "build" 
      } 
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/server.js"
    }
  ]
} 