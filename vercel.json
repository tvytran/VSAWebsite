{
  "version": 2,
  "builds": [
    { 
      "src": "backend/server.js", 
      "use": "@vercel/node"
    },
    { 
      "src": "vsa-frontend/package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "build" 
      } 
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/backend/server.js"
    },
    { 
      "src": "/(.*)", 
      "dest": "/vsa-frontend/$1" 
    }
  ],
  "functions": {
    "backend/server.js": {
      "maxDuration": 30
    }
  }
} 